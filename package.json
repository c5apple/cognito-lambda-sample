{
  "name": "cognito-lambda-sample",
  "version": "1.0.0",
  "description": "サーバーレス認証API - AWS Lambda、Python、Amazon Cognitoを使用したJWTトークンベースの認証システム",
  "main": "index.js",
  "scripts": {
    "create-user": "python cli/create_user.py",
    "delete-user": "python cli/delete_user.py",
    "test": "python -m pytest tests/",
    "test-verbose": "python -m pytest tests/ -v",
    "test-coverage": "python -m pytest tests/ --cov=. --cov-report=html",
    "deploy": "serverless deploy",
    "deploy-dev": "serverless deploy --stage dev",
    "deploy-prod": "serverless deploy --stage prod",
    "docker-build": "docker build -t cognito-auth-api .",
    "docker-up": "docker-compose up -d",
    "docker-down": "docker-compose down",
    "docker-logs": "docker-compose logs -f",
    "docker-test": "docker-compose exec cognito-auth-api python -m pytest tests/ -v",
    "docker-create-user": "docker-compose exec cognito-auth-api python cli/create_user.py",
    "docker-delete-user": "docker-compose exec cognito-auth-api python cli/delete_user.py",
    "docker-shell": "docker-compose exec cognito-auth-api /bin/bash",
    "lint": "python -m flake8 handlers utils cli tests",
    "format": "python -m black handlers utils cli tests",
    "install-deps": "pip install -r requirements.txt",
    "clean": "find . -type d -name __pycache__ -delete && find . -name '*.pyc' -delete"
  },
  "keywords": [
    "aws",
    "lambda",
    "cognito",
    "serverless",
    "authentication",
    "jwt",
    "python"
  ],
  "author": "Cognito Lambda Sample Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/cognito-lambda-sample.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/cognito-lambda-sample/issues"
  },
  "homepage": "https://github.com/your-username/cognito-lambda-sample#readme",
  "devDependencies": {},
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.9.0"
  }
}